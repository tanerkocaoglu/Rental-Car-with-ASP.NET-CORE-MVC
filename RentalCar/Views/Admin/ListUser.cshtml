@model IEnumerable<RentalCar.Entites.User>
@{
    ViewData["Title"] = "Kullanıcılar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="mb-3">

    <h3 class="fw-bold fs-4 mb-3">Kullanıcılar</h3>
    <div class="row">
        <div class="col-12">
            <table id="myTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>İsim</th>
                        <th>Kullanıcı Adı</th>
                        <th>E-Posta</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FullName</td>
                            <td>@item.Username</td>
                            <td>@item.Email</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                "paging": true,
                "ordering": true,
                "info": true,
                "language": {
                    "url": "/js/datatables/Turkish.json"
                },
                "columnDefs": [
                    { type: 'turkish', targets: '_all' },
                    { type: 'date-euro', targets: 2 }
                ]
            });
        });
    </script>
}




