@model Contact
@{
    ViewData["Title"] = "İletişim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* İletişim Bilgileri */
    .contact-info {
        background-color: #f8f9fa;
        padding: 50px;
        text-align: center;
        border-radius: 10px;
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
    }

        .contact-info h2 {
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 30px;
            color: #343a40;
        }

        .contact-info p {
            font-size: 1.2rem;
            color: #6c757d;
            margin-bottom: 20px;
        }

            .contact-info p strong {
                color: #343a40;
            }

    /* Harita */
    .map-container {
        height: 400px;
        margin-bottom: 50px;
        border-radius: 10px;
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
    }

    /* İletişim Formu */
    .contact-form {
        margin-bottom: 50px;
        background-color: #fff;
        padding: 50px;
        border-radius: 10px;
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
    }

        .contact-form h2 {
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 30px;
            color: #343a40;
        }

        .contact-form .form-group {
            margin-bottom: 20px;
        }

            .contact-form .form-group label {
                font-weight: bold;
            }

            .contact-form .form-group input,
            .contact-form .form-group textarea {
                width: 100%;
                padding: 10px;
                border: 1px solid #ced4da;
                border-radius: 5px;
            }

            .contact-form .form-group textarea {
                resize: none;
                height: 150px;
            }

            .contact-form .form-group button {
                width: 100%;
                padding: 10px;
                background-color: #007bff;
                color: #fff;
                border: none;
                border-radius: 5px;
                cursor: pointer;
            }
</style>

<div class="container mt-5">
    <div class="contact-info">
        <div class="container">
            <h2>İletişim Bilgileri</h2>
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Adres:</strong> Kayabaşı Mh., 75. Yıl Cd, Başakşehir, İstanbul</p>
                    <p><strong>Telefon:</strong> 212-444-04xx</p>
                    <p><strong>E-posta:</strong> info@basaksehirotokiralama.com</p>
                    <p><strong>Çalışma Saatleri:</strong> Pazartesi-Cuma: 09:00-18:00</p>
                </div>
                <div class="col-md-6">
                    <div class="map-container">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3023.7454161377896!2d29.966928575673098!3d40.723620571391855!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cb452c39e5717b%3A0x4fed2448ab2e1724!2sKocaeli%20Meslek%20Y%C3%BCksekokulu!5e0!3m2!1str!2str!4v1714827583882!5m2!1str!2str" width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="contact-form mt-5">
        <div class="container">
            <h2>Bize Ulaşın</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
            <form method="POST">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="FullName" class="form-label">İsim giriniz: </label>
                            <input asp-for="FullName" class="form-control" type="text" />
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="form-label">E-Posta giriniz: </label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="form-label">Telefon numarası giriniz: </label>
                            <input asp-for="PhoneNumber" class="form-control" type="tel" placeholder="05xx-xxx-xx-xx" />
                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Message">Mesajınız:</label>
                            <textarea asp-for="Message" id="message" name="message" rows="5" class="form-control" required></textarea>
                            <span asp-validation-for="Message" class="text-danger small"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Gönder</button>
                    </div>
                    @if (ViewData["isSuccess"] != null)
                    {
                        <h3>@ViewData["isSuccess"]</h3>
                    }
                </div>
            </form>
        </div>
    </div>
</div>

