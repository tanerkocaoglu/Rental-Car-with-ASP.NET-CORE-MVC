@model RentalCar.Models.CarViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 text-center pb-2">
            Araç Ekle
        </h1>
    </div>
</div>

<hr />


<div class="row">
    <div class="col-6 offset-3">
        <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
        <form method="post" enctype="multipart/form-data">
            <div class="form-group mb-3">
                <label asp-for="Brand" class="form-label">Marka adı giriniz</label>
                <input asp-for="Brand" class="form-control" type="text" />
                <span asp-validation-for="Brand" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Model" class="form-label">Araç modeli giriniz</label>
                <input asp-for="Model" class="form-control" type="text" />
                <span asp-validation-for="Model" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Year" class="form-label">Üretim yılı giriniz</label>
                <input asp-for="Year" class="form-control" type="text" />
                <span asp-validation-for="Year" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="FuelType" class="form-label">Yakıt Tipi Seçiniz</label>
                <select asp-for="FuelType" class="form-select" aria-label="">
                    <option selected value="Elektrik">Elektrik</option>
                    <option value="Benzin">Benzin</option>
                    <option value="Dizel">Dizel</option>
                    <option value="LPG">LPG</option>
                </select>
                <span asp-validation-for="FuelType" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="TransmissionType" class="form-label">Vites Tipi Seçiniz</label>
                <select asp-for="TransmissionType" class="form-select" aria-label="">
                    <option selected value="Manuel">Manuel</option>
                    <option value="Otomatik">Otomatik</option>
                </select>
                <span asp-validation-for="TransmissionType" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="DailyRate" class="form-label">Günlük ücret giriniz</label>
                <input asp-for="DailyRate" class="form-control" type="number" />
                <span asp-validation-for="DailyRate" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <div class="form-group mb-3 d-grid">
                <button type="submit" class="btn btn-success d-block">
                    <i class="fa-solid fa-plus"></i>
                    Ekle
                </button>
            </div>
            <div class="form-group d-grid-1">
                <a asp-action="Index">Geri dön</a>
            </div>
        </form>
    </div>
</div>

