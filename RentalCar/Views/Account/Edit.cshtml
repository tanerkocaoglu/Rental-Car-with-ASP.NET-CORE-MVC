@model RentalCar.Models.UserViewModel
@{
    ViewData["Title"] = "Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 text-center pb-2">
            Kullanıcı Düzenle
        </h1>
    </div>
</div>

<hr />


<div class="row">
    <div class="col-6 offset-3">
        <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="FullName" class="form-label">Ad giriniz</label>
                <input asp-for="FullName" class="form-control" type="text" />
                <span asp-validation-for="FullName" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Username" class="form-label">Kullanıcı adı giriniz</label>
                <input asp-for="Username" class="form-control" type="text" />
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label">E-Posta giriniz</label>
                <input asp-for="Email" class="form-control" type="text" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3 d-grid">
                <button type="submit" class="btn btn-info d-block">
                    <i class="fa-solid fa-pen"></i>
                    Düzenle
                </button>
            </div>
            <div class="form-group d-grid-1">
                <a asp-controller="Admin" asp-action="ListUser">Geri dön</a>
            </div>
        </form>
    </div>
</div>

